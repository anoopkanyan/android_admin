<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:elevation="100dp"
    card_view:cardBackgroundColor="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/orderNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/lbl_product_name"
                android:textSize="16dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/orderDisplayTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:textColor="@color/lbl_product_name"
                android:textSize="16dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/orderStateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderNumber"
                android:padding="5dp"
                android:text="State:"
                android:textColor="@color/lbl_product_description" />


            <TextView
                android:id="@+id/orderState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderNumber"
                android:layout_toRightOf="@+id/orderStateLabel"
                android:padding="5dp"
                android:textColor="@color/lbl_product_description" />

            <TextView
                android:id="@+id/orderPaymentState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/orderNumber"
                android:padding="5dp"
                android:textColor="@color/lbl_product_description" />

            <TextView
                android:id="@+id/orderQuantityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderStateLabel"
                android:padding="5dp"
                android:text="Quantity:"
                android:textColor="@color/lbl_product_description" />


            <TextView
                android:id="@+id/orderQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderState"
                android:layout_toRightOf="@+id/orderQuantityLabel"
                android:padding="5dp"
                android:textColor="@color/lbl_product_description" />

            <TextView
                android:id="@+id/orderShipmentState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/orderState"
                android:padding="5dp"
                android:textColor="@color/lbl_product_description" />


        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>