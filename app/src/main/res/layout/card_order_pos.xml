<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:background="@color/white"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp">


        <TextView
            android:id="@+id/product_name_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Product Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/product_price_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name_pos"
            android:paddingBottom="8dp"
            android:paddingTop="4dp"
            android:text="$20.00"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/product_price_total_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_price_pos"
            android:paddingTop="4dp"
            android:text="$20.00"
            android:textColor="@color/colorAccent"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/product_trash_cart"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_trash_cart" />

        <ImageView
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:id="@+id/plus_button"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/product_quantity_cart"
            android:src="@drawable/ic_plus_cart"/>

        <TextView
            android:id="@+id/product_quantity_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="00"
            android:textSize="17dip"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/minus_button"
            android:layout_toStartOf="@+id/minus_button" />

        <ImageView
            android:id="@+id/minus_button"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:src="@drawable/ic_minus_cart"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>